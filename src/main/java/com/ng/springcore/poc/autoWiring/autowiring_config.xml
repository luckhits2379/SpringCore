<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context.xsd">


	<context:annotation-config />

	<!-- <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor"/> -->

	<!--this is bean, injecting value using setter injection, using value element -->
	<bean class="com.ng.springcore.poc.autoWiring.Student" name="student1">

		<property name="studentId">
			<value>123</value>
		</property>

		<property name="studentName">
			<value>Setter using value tag</value>
		</property>

		<property name="studentAddress">
			<value>Delhi</value>
		</property>

		<property name="studentDetails">
			<ref bean="studentDetail1"></ref>
		</property>

	</bean>

	<!--this is bean, injecting value using setter injection, using value attribute -->
	<bean class="com.ng.springcore.poc.autoWiring.Student" name="student2">

		<property name="studentId" value="123" />
		<property name="studentName" value="Setter using value attr" />
		<property name="studentAddress" value="Indore" />
		<property name="studentDetails" ref="studentDetail1" />

	</bean>



	<!--this is bean, injecting value using setter injection, using p schema, 
		search -->
	<bean class="com.ng.springcore.poc.autoWiring.Student" name="student3"
		p:studentId="123" p:studentName="Setter using p schema"
		p:studentAddress="Bhopal" p:studentDetails-ref="studentDetail1" />

	<!--this is bean, injecting value using constructor injection, using value 
		attribute -->
	<bean class="com.ng.springcore.poc.autoWiring.Student" name="student4">

		<constructor-arg value="123" type="int" />
		<constructor-arg value="constructor using value attr"
			type="String" />
		<constructor-arg value="Indore" type="String" />
		<constructor-arg ref="studentDetail1"
			type="StudentDetails" />

	</bean>

	<!--this is bean, injecting value using contructor injection, using value 
		element -->
	<bean class="com.ng.springcore.poc.autoWiring.Student" name="student5">

		<constructor-arg type="int">
			<value>123</value>
		</constructor-arg>

		<constructor-arg type="String">
			<value>constructor using value tag</value>
		</constructor-arg>

		<constructor-arg type="String">
			<value>Delhi</value>
		</constructor-arg>

		<constructor-arg type="StudentDetails">
			<ref bean="studentDetail1"></ref>
		</constructor-arg>

	</bean>



	<!--this is bean, injecting value using constructor injection, using c schema -->
	<bean class="com.ng.springcore.poc.autoWiring.Student" name="student6"
		c:studentId="123" c:studentName="constructor using c"
		c:studentAddress="Bhopal" c:studentDetails-ref="studentDetail1" />

	<!--this is bean, injecting value using constructor injection, using value 
		attribute -->
	<bean class="com.ng.springcore.poc.autoWiring.Student" name="student7">

		<constructor-arg value="Indore" name="studentAddress" />
		<constructor-arg ref="studentDetail1"
			name="studentDetails" />

		<constructor-arg value="123" name="studentId" />
		<constructor-arg
			value="constructor using value and name attr" name="studentName" />


	</bean>


	<!--this is bean, injecting value using setter injection, using value element -->
	<bean class="com.ng.springcore.poc.autoWiring.StudentDetails"
		name="studentDetail1" init-method="init" destroy-method="destroy">

		<property name="studentPhoneNumber">
			<list>
				<value>1234</value>
				<value>1235</value>
				<value>1236</value>
				<null />
			</list>

		</property>

		<property name="subject">
			<set>
				<value>Maths</value>
				<value>Hindi</value>
				<value>English</value>
			</set>
		</property>

		<property name="addressMap">
			<map>
				<entry key="home" value="Indore" />
				<entry key="office" value="Bhopal" />
				<entry key="other" value="Mumbai" />
			</map>
		</property>

	</bean>

</beans>